#:kivy 1.9.1

<StroopGame>:
    color_button1: c1
    color_button2: c2
    color_button3: c3
    color_button4: c4
    score_button: s
    timer_button: t
    color_direction_button: cdb

    BoxLayout:
        orientation: 'vertical'
        Button:
            id: s
            size_hint: 1, .15
            text: 'Score'
        Button:
            id: t
            size_hint: 1, .15
            text: 'Timer'
        FloatLayout:
            Button:
                id: c1
                size_hint: .5, .5
                pos_hint: {'x':0, 'y':.5}
                text: 'Color 1'
            Button:
                id: c2
                size_hint: .5, .5
                pos_hint: {'x':.5, 'y':.5}
                text: 'Color 2'
            Button:
                id: c3
                size_hint: .5, .5
                pos_hint: {'x':0, 'y':0}
                text: 'Color 3'
            Button:
                id: c4
                size_hint: .5, .5
                pos_hint: {'x':.5, 'y':0}
                text: 'Color 4'
            Button:
                id: cdb
                background_color: [255,0,0,.9]
                text: 'directions'
                size_hint: .25, .25
                pos_hint: {'x':.38, 'y':.38}
        Button:
            size_hint: 1, .1
            text: 'BACK'
            on_press:
                root.manager.current = 'menu'
                
<Menu>:

    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 0, .9
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            background_color: [0,0,255,.6]
            text: 'Play'
            size_hint: .25, .25
            pos_hint: {'x':.37, 'y':.55}
            on_press:
                app.start_game()
        Button:
            background_color: [0,0,255,.6]
            text: 'How to play'
            size_hint: .25, .25
            pos_hint: {'x':.37, 'y':.2}
            on_press:
                root.manager.current = 'how_to_play'
                
<HowToPlay>:
    FloatLayout:
                
        Button:
            background_color: [0,0,0,.9]
            text: 'Not built yet'
            size_hint: 1, 1
        Button:
            background_color: [0,0,255,.6]
            size_hint: .25, .25
            pos_hint: {'x':.75, 'y':0}
            text: 'Menu'
            on_touch_down:
                root.manager.current = 'menu'
                
<GameOver>:
    final_score: f
    FloatLayout:
        Label:
            canvas.before:
                Color:
                    rgba: 1, 1, 0, .9
                Rectangle:
                    pos: self.pos
                    size: self.size
                    
            color: [0,0,0,1]
            id: f
            text: 'score'
            size_hint: .25, .15
            pos_hint: {'x':.37, 'y':.75}
    
        Button:
            background_color: [0,0,255,.6]
            size_hint: .25, .25
            pos_hint: {'x':.37, 'y':.35}
            text: 'Menu'
            
            on_press:
                root.manager.current = 'menu'
            
        Button:
            background_color: [0,0,255,.6]
            size_hint: .25, .25
            pos_hint: {'x':.37, 'y':.05}
            text: 'Play Again'
            
            on_press:
                app.start_game()
                
<Ad>:
    final_score: f
    title: 'Pop up'
    BoxLayout:
        orientation: 'vertical'
        Label:
            canvas.before:
                Color:
                    rgba: 0, 1, 0, .9
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: f
            text: 'Score'
        Label:
            canvas.before:
                Color:
                    rgba: 0, 0, 1, .9
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: 'Play Again'
            on_touch_down:
                app.start_game()
                root.dismiss()
        Button:
            text: 'Menu'
            on_touch_down:
                app.go_to_menu()
                root.dismiss()
                
                
                
                
                
                
                
                
                
                
                